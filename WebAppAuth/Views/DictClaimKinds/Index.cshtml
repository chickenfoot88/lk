@model IEnumerable<OhDataManager.Entities.System.DictClaimKind>

@{
  ViewBag.Title = "Виды заявок";
  Layout = "~/Views/Administrator/_Layout.cshtml";
}


@Html.ActionLink("Добавить", "Create", new {}, new { @class = "btn margin-bottom btn-success btn-lg"})

<div class="box">

  <div class="box-header"></div>

  <div class="box-body">

    <table class="table table-bordered table-hover dataTable">
      <tr>
        <th>
          @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.IsVisible)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.CreationTime)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.ChangedTime)
        </th>
        <th></th>
      </tr>

      @foreach (var item in Model)
      {
        <tr>
          <td>
            @Html.DisplayFor(modelItem => item.Name)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Note)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.IsVisible)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.CreationTime)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.ChangedTime)
          </td>

          <td class="icons-cell-3">

            <a class="" href="@Url.Action( "Edit", "DictClaimKinds", new {id = item.Id})">
              <i class="fa fa-pencil" aria-hidden="true">
              </i>
            </a>

            <a class="" href="@Url.Action( "Details", "DictClaimKinds", new {id = item.Id})">
              <i class="fa fa-cog" aria-hidden="true">
              </i>
            </a>

            <a class="" href="@Url.Action( "Delete", "DictClaimKinds", new {id = item.Id})">
              <i class="fa fa-trash" aria-hidden="true">
              </i>
            </a>

          </td>

        </tr>
      }

    </table>

  </div>

</div>
