@model IEnumerable<WebAppAuth.Entities.Employee>

@{
    ViewBag.Title = "Сотрудники";
    Layout = "~/Views/Administrator/_Layout.cshtml";
}

<div class="box box-primary">

  <div class="box-header with-border">
    <div class="row">
      <div class="col-xs-2">
          @Html.ActionLink(
          "Добавить",
          "Create",
          "Employees",
          new { @class = "btn btn-block btn-primary" })
      </div>
    </div>
  </div>

  <div class="box-body">

    <table class="webgrid-table table table-condensed table-bordered dataTable">

      <tr class="webgrid-header">

        <th>
          @Html.DisplayNameFor(model => model.ApplicationUser.Email)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Organization.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patronymic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th></th>

      </tr>

      @foreach (var item in Model)
      {
        <tr>
          <td>
            @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
          </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organization.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
          <td>
            @Html.DisplayFor(modelItem => item.Name)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Patronymic)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.DisplayName)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
          </td>
          <td>
            <ul class="table-row-list">
              <li>
                @Html.ActionLink(
                "Изменить",
                "Edit",
                new { id = item.Id },
                new { @class = "btn btn-warning" })
              </li>
              <li>
                @Html.ActionLink(
                "Подробнее",
                "Details",
                new { id = item.Id },
                new { @class = "btn btn-primary" })
              </li>
            </ul>
          </td>
        </tr>
      }

  </table>
  </div>

</div>
