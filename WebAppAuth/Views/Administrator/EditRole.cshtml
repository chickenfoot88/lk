@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    Layout = "~/Views/Administrator/_Layout.cshtml";
}
@{
    ViewBag.Title = "Изменить роль";
}

      <div class="row">

        <div class="col-md-12">

          <div class="box">

            <div class="box-header with-border">

              @Html.ActionLink("Список ролей", "RolesList", "", new {@class = "btn btn-primary"})
              @Html.ActionLink("Создать новую роль", "CreateRole", "", new {@class = "btn btn-success"})

              @if (ViewBag.ResultMessage != null)
              {
                <p style="color: red;">
                  @ViewBag.ResultMessage
                </p>
              }

            </div>

            <div class="box-body">

              @using (Html.BeginForm())
              {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">

                  <label for="RoleName">Роль</label>

                  <div class="row">

                    <div class="col-md-4">
                      @Html.TextBoxFor(model => model.Name, "", new { @class = "form-control"} )
                    </div>

                    <div class="col-md-2">
                      <input type="submit" class="btn btn-warning" value="Сохранить">
                    </div>

                  </div>

                </div>
              }

            </div>

        </div>

      </div>

    </div>