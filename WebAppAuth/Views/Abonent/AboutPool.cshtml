@Model OhDataManager.Entities.Abonent.Pool


<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Подробнее об опросе</h4>
    </div>
    <div class="modal-body">
        <div id="dialog1" title="Подробнее об опросе">
            <div class="col-md-12 box">

                <div class="box-body">
                    <div class="form-group">
                        <div class="col-xs-2 control-label">Номер:</div>
                        <div class="col-xs-2">
                            <input type="text" class="form-control input-sm" value="@Model[0].Id" readonly>
                        </div>
                        <div class="col-xs-2 control-label">Дата создания:</div>
                        <div class="col-xs-2">
                            <input type="text" class="form-control input-sm" value="@Model[0].DateCreate.ToString("dd.MM.yyyy")" readonly>
                        </div>
                        <div class="col-xs-2 control-label">Дата закрытия:</div>
                        <div class="col-xs-2">
                            <input type="text" class="form-control input-sm" value="@Html.Raw((@Model[0].DateFinish == null) ? "" : @Model[0].DateFinish.ToString("dd.MM.yyyy"))" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-2 control-label">Инициатор:</div>
                        <div class="col-xs-4">
                            <input type="text" class="form-control input-sm" value="@Model[0].Employee.Name" readonly>
                        </div>
                        <div class="col-xs-2 control-label">Статус:</div>
                        <div class="col-xs-4">
                            <input type="text" class="form-control input-sm" value="Жилец" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-2 control-label">Комментарий:</div>
                        <div class="col-xs-10">
                            <textarea type="textarea" class="form-control input-sm" rows="4" readonly>@Model[0].Note</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-2 control-label">Статус:</div>
                        <div class="col-xs-3">
                            <input type="text" class="form-control input-sm" value="@Model[0].PoolStatus.Name" readonly>
                        </div>
                        <div class="col-md-offset-1 col-xs-4 control-label">Количество участников:</div>
                        <div class="col-xs-2">
                            <input type="text" class="form-control input-sm" value="@Model[0].CountVote" readonly>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn uk-button-color" data-dismiss="modal">Закрыть</button>
    </div>
</div>
