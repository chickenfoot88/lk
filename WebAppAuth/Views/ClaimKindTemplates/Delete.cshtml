@model WebAppAuth.Entities.ClaimKindTemplate

@{
  ViewBag.Title = "Удаление";
  Layout = "~/Views/Employee/_Layout.cshtml";
}

<section class="wrapper">

  <div class="container">

    <section class="content-header">

      <div class="row">
        <div class="col-md-12">
          <h1>@ViewBag.Title</h1>
        </div>
      </div>

    </section>

    <section class="content">

      <div class="row">

        <div class="col-xs-12">

          <div class="box">

            <div class="box-header"></div>

            <div class="box-body">

              <dl class="dl-horizontal">
                <dt>
                  @Html.DisplayNameFor(model => model.ClaimKind.Name)
                </dt>

                <dd>
                  @Html.DisplayFor(model => model.ClaimKind.Name)
                </dd>

                <dt>
                  @Html.DisplayNameFor(model => model.Template)
                </dt>

                <dd>
                  @Html.DisplayFor(model => model.Template)
                </dd>

                <dt>
                  @Html.DisplayNameFor(model => model.CreationTime)
                </dt>

                <dd>
                  @Html.DisplayFor(model => model.CreationTime)
                </dd>

                <dt>
                  @Html.DisplayNameFor(model => model.ChangedTime)
                </dt>

                <dd>
                  @Html.DisplayFor(model => model.ChangedTime)
                </dd>

              </dl>

            </div>

              <div class="box-footer box-footer-left">

                @using (Html.BeginForm()) {
                  @Html.AntiForgeryToken()

                  <div class="form-actions no-color">
                    <input type="submit" value="Удалить" class="btn btn-warning" />
                    @Html.ActionLink("Назад", "Index", new {}, new { @class = "btn btn-primary"} )
                  </div>
                }

              </div>

          </div>

        </div>

      </div>

    </section>

  </div>

</section>
